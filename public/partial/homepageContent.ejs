<md-sidenav md-component-id="left" class="md-sidenav-left md-whiteframe-z2">
			<md-list>
				<md-list-item ng-repeat="item in list" md-ink-ripple="#3F51B5" class="pointer">
					<md-icon aria-label="{{item.label}}" class="material-icons">{{item.icon}}</md-icon>
					<p>{{item.name}}</p>
				</md-list-item>
			</md-list>
		</md-sidenav> <!-- sidenav ends here -->
		<md-content flex="flex">			
			<main layout-margin="layout-margin">
				<md-card layout="column" layout-align="center center" style="padding-bottom: 10px" >
					<jk-carousel
						data="dataArray"
						item-template-url="'item-template.ejs'"
						max-width="800" 
						max-height="500"
						auto-slide="true"
						auto-slide-time="2000" >
					</jk-carousel>
				</md-card>	<!-- the carousel ends here -->			
				<!-- cards for top products -->
				<div layout="row" layout-xs="column" layout-sm="column">				
					<md-card ng-repeat="category in productCategoryList">
						<img ng-src="{{category.categoryImagePath}}" class="md-card-image" alt="Washed Out">
						<md-card-title>
							<md-card-title-text>
								<span class="md-headline">{{category.categoryHeading}}</span>
							</md-card-title-text>
						</md-card-title>
						<md-card-content>
							<p>{{category.categoryContentText}}</p>
						</md-card-content>
						<md-card-actions layout="column" layout-align="start">
							<md-button ng-href="{{category.pageLink}}">{{category.categoryButtonText}}</md-button>
						</md-card-actions>
					</md-card>		
			</div><!-- cards for top products ends-->
			<!-- this is the section for the product slider and offer section -->
			<div layout="column" layout-gt-xs="row" >
				<md-card flex flex-gt-xs="50">					
					<div layout="row">
						<md-card-content flex flex-gt-xs=30 ng-repeat="sug_prod in suggestedProductList | limitTo:3">
							<img ng-src="{{sug_prod.suegg_productPath}}" width="200px" height="200px">
							<md-button class="quick-view">Quick View</md-button>
						</md-card-content>						
						<md-button layout-fill class="see-more-btn">see more</md-button>
					</div>
				</md-card>
				<md-card flex ng-repeat="offer in offerPageData">
					<h2>{{offer.offerHeading}}</h2>
					<md-card-content>
						<img ng-src="{{offer.offerImagePath}}">
					</md-card-content>
				</md-card>
			</div><!-- this is the section for the product slider and offer section -->

			<!-- the contact us form starts here -->
				<div layout="row" >
					
				</div>
				<div layout="row" layout-xs="column" layout-sm="column" layout-align="center center">
					<div class="contact-us-section">
						<label class="heading-contact-us">Contact Us</label>
						<div layout="column">
							<md-input-container>
								<label>Name</label>
								<input md-maxlength="30" required name="name" ng-model="user.name" />
								<div class="hint" ng-if="showHints">Tell us what we should call you!</div>			
							</md-input-container>
						</div>
						<div layout="column">	
							<md-input-container>
								<label>Email</label>
								<input name="email" ng-model="user.email" required minlength="10" maxlength="100" ng-pattern="/^.+@.+\..+$/" />
								<div class="hint" ng-show="showHints">How can we reach you?</div>
							</md-input-container>												
						</div>
						<div layout="column">	
							<md-input-container>
								<label>Phone Number</label>
								<input name="phone" ng-model="user.phone" ng-pattern="/^[(][0-9]{3}[)] [0-9]{3}-[0-9]{4}$/" />
								<div class="hint" ng-show="showHints">(###) ###-####</div>						
							</md-input-container>						
						</div>
					</div>
			</div> <!-- the contact us form ends here -->

			<div layout="row" style="background: #e3e3e3;">
				<div flex="30">About Us</div>				
				<div flex="40">E-mail : tomar.shivir@gmail.com</div>
				<div flex="30">Contact Us</div>
			</div>
		</main>
	</md-content>